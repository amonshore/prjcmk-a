<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/YelloActionBarStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YelloActionBarStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OrangeActionBarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_orange_dark</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/holo_orange_dark</item>
    </style>

    <!-- ActionBar styles -->
    <style name="YelloActionBarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/comikku_yellow_light</item>

        <!-- Support library compatibility -->
        <item name="background">@color/comikku_yellow_light</item>
    </style>

</resources>

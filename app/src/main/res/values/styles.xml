<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/OrangeActionBarStyle</item>
        <item name="android:actionBarTabStyle">@style/OrangeActionBarTabStyle</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/OrangeActionBarStyle</item>
        <item name="actionBarTabStyle">@style/OrangeActionBarTabStyle</item>
    </style>

    <!-- ActionBar styles -->
    <style name="OrangeActionBarStyle"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@android:color/holo_orange_dark</item>

        <!-- Support library compatibility -->
        <item name="background">@android:color/holo_orange_dark</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="OrangeActionBarTabStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <!--<item name="android:background">@android:color/holo_orange_light</item>-->

        <!-- Support library compatibility -->
        <!--<item name="background">@android:color/holo_orange_light</item>-->
    </style>

</resources>

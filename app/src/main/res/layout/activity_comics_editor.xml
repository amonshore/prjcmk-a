<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.amonshore.secondapp.ui.ComicsEditorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_name"
        android:id="@+id/lbl_editor_comics_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_name"
        android:layout_below="@+id/lbl_editor_comics_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_marginBottom="10dp">
        <requestFocus/>
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_publisher"
        android:id="@+id/lbl_editor_comics_publisher"
        android:layout_below="@+id/txt_editor_comics_name"
        android:layout_alignParentStart="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_publisher"
        android:layout_below="@+id/lbl_editor_comics_publisher"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text|textCapSentences"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_series"
        android:id="@+id/lbl_editor_comics_series"
        android:layout_below="@+id/txt_editor_comics_publisher"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_series"
        android:layout_below="@+id/lbl_editor_comics_series"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text|textCapSentences"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_authors"
        android:id="@+id/lbl_editor_comics_authors"
        android:layout_below="@+id/txt_editor_comics_series"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_authors"
        android:layout_below="@+id/lbl_editor_comics_authors"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="text|textNoSuggestions|textCapSentences"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_price"
        android:id="@+id/lbl_editor_comics_price"
        android:layout_below="@+id/txt_editor_comics_authors"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_price"
        android:layout_below="@+id/lbl_editor_comics_price"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="numberDecimal"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/editor_comics_periodicity"
        android:id="@+id/lbl_editor_comics_periodicity"
        android:layout_below="@+id/txt_editor_comics_price"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_editor_comics_periodicity"
        android:layout_alignTop="@+id/lbl_editor_comics_periodicity"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lbl_editor_comics_periodicity" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground" >

    <RelativeLayout
        android:id="@+id/lay_comics"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/img_list_comics_thumb"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/bck_detail"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txt_list_comics_name"
            tools:text="L'attacco dei giganti before the fall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_list_comics_thumb"
            android:maxLines="3"
            android:padding="8dp"
            android:textSize="@dimen/comikku_text_size_primary"
            android:textColor="@color/comikku_primary_text" />

        <TextView
            android:id="@+id/txt_list_comics_publisher"
            tools:text="Planet Manga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_list_comics_name"
            android:maxLines="3"
            android:padding="8dp"
            android:textSize="@dimen/comikku_text_size_secondary"
            android:textColor="@color/comikku_secondary_text" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import"
            android:id="@+id/chk_list_comics_toimport"
            android:layout_below="@+id/txt_list_comics_publisher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
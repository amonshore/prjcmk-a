<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="it.amonshore.comikkua.ui.release.ReleaseListFragment">

    <se.emilsjolander.stickylistheaders.StickyListHeadersListView
        android:id="@+id/lst_releases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/comikku_list_divider_color"
        android:dividerHeight="1dp" />

    <TextView android:id="@android:id/empty" android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:text="@string/release_empty_list"
        android:gravity="center" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_comics_search_amazon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/floating_action_margin_bottom_x2"
        android:layout_marginRight="@dimen/floating_action_margin_right"
        android:src="@drawable/ic_amazon"
        android:visibility="gone"
        app:fab_colorNormal="@color/comikku_fab_normal_color"
        app:fab_colorPressed="@color/comikku_fab_pressed_color"
        app:fab_colorRipple="@color/comikku_fab_ripple_color"
        app:fab_elevationCompat="@dimen/floating_action_elevation"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_comics_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/floating_action_margin_bottom"
        android:layout_marginRight="@dimen/floating_action_margin_right"
        android:src="@drawable/ic_plus"
        android:visibility="gone"
        app:fab_colorNormal="@color/comikku_fab_normal_color"
        app:fab_colorPressed="@color/comikku_fab_pressed_color"
        app:fab_colorRipple="@color/comikku_fab_ripple_color"
        app:fab_elevationCompat="@dimen/floating_action_elevation"/>

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab_comics_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/floating_action_margin_bottom"
        android:layout_marginRight="@dimen/floating_action_margin_right"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        app:fab_colorNormal="@color/comikku_fab_danger_normal_color"
        app:fab_colorPressed="@color/comikku_fab_danger_pressed_color"
        app:fab_colorRipple="@color/comikku_fab_danger_ripple_color"
        app:fab_elevationCompat="@dimen/floating_action_elevation"/>

</FrameLayout>
